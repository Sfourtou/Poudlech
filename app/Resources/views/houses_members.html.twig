{% extends 'base.html.twig' %}

{% block body %}

    <div id="imgHouse" class="col-lg-3">
      <img src="{{ asset('bundles/platform/img/' ~ houseName ~ '.png') }}"/>
    </div>
    <div class="col-lg-8">
      <section class="panel">
        <table class="table table-striped table-advance table-hover">
          <tbody>
            <tr>
                <th>#</th>
                <th>
                  <i class="icon_profile"></i>
                  Full name
                </th>
                <th>
                  <i class="icon_mail_alt"></i>
                  Email
                </th>
                <th>
                </th>
              </tr>
            {% set i = 1 %}
            {% for member in members %}
                <tr>
                    <td>{{ i }}</td>
                    <td>{{ member.firstName ~ " " ~ member.name}}</td>
                    <td>{{ member.email }}</td>
                    {% if member.isTeamLeader == 1 %}
                    <td> <span class="fa fa-bullhorn"></span></td>
                     {% else %}
                        <td></td>
                    {% endif %}
                </tr>
            {% set i = i + 1 %}
            {% endfor %}
          </tbody>
        </table>
    </section>
    </div>
{% endblock %}
