<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <link href="{{ asset('bundles/platform/NiceAdmin/css/bootstrap.min.css')}}" rel="stylesheet">
        <link href="{{ asset('bundles/platform/NiceAdmin/css/bootstrap-theme.css')}}" rel="stylesheet">
        <link href="{{ asset('bundles/platform/NiceAdmin/css/elegant-icons-style.css')}}" rel="stylesheet" />
        <link href="{{ asset('bundles/platform/NiceAdmin/css/font-awesome.min.css')}}" rel="stylesheet" />
        <link href="{{ asset('bundles/platform/NiceAdmin/css/style.css')}}" rel="stylesheet">
        <link href="{{ asset('bundles/platform/NiceAdmin/css/style-responsive.css')}}" rel="stylesheet" />
    </head>
    <body style="background: url('{% block image %}{% endblock %}'); background-size: cover">
        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    </body>
</html>
